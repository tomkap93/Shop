@model IEnumerable<CmsShop.Models.ViewModels.Shop.CategoryVM>

@{
    ViewBag.Title = "Sklep Kategorie";
}

<h2>Sklep Kategorie</h2>

<div class="new-cat">
    <input type="text" id="newCatName" />
    <p>

        <a href="#" id="newCat">Dodaj Nową Kategorie</a>
        <span class="ajax-text"></span>

    </p>
</div>

@if (!Model.Any())
{
    <h1 class="text-center">Nie ma żadnych kategorii.</h1>
}
else
{


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.EditorFor(modelItem => item.Name,
                   new { htmlAttributes=new { @class="form-control",@readonly="readonly"} })
                </td>


                <td>
                    @Html.ActionLink("Usuń", "DeleteCategory", new { id = item.Id }, new { @class = "delete" })
                </td>
            </tr>
        }

    </table>
}






